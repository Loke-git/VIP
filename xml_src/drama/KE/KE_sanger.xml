    <text type="drama" rend="handwritten" xml:lang="dan-nob">
        <body>
            <HIS:hisDiv type="song" n="3">
                <HIS:hisLg>
                    <lb/><head type="number"><pb n="2"/>3<hi rend="raised">die</hi> akt.</head>
                    <lb/><head type="main">Munkenes sang</head>
                    <HIS:hisLg>
                        <HIS:hisLg>
                            <lb/><l>Sankt Olaf og sankt Peder,</l>
                            <lb/><l>stat op og ruster eder,</l>
                            <lb/><l>knus slangen med jer hæl; &dash;</l>
                            <lb/><l>sankt Halvard og sankt Thomas,</l>
                            <lb/><l>og alle helgne Romas,</l>
                            <lb/><l>slå kreds om bispens sjæl!</l>
                        </HIS:hisLg>
                        <HIS:hisLg>
                            <lb/><l>Nu er han hårdt i vånde;</l>
                            <lb/><l>ryk ud imod den onde,</l>
                            <lb/><l>sankt Patrick og sankt Sveder,</l>
                            <lb/><l>sankt Olaf og sankt Peder,</l>
                            <lb/><l>sankt Halvard og sankt Thomas,</l>
                            <lb/><l>og alle helgne Romas!</l>
                        </HIS:hisLg>
                    <figure type="bar"/>
                    </HIS:hisLg></HIS:hisLg>
            </HIS:hisDiv>
            <HIS:hisDiv type="song" n="4">
                <HIS:hisLg>
                    <lb/><head type="number"><pb n="3"/>5<hi rend="raised">te</hi> akt.</head>
                    <lb/><head type="sub">(Finale.)</head>
                    <lb/><head type="main">Kvindernes sang</head>
                    <lb/><head type="sub">(i kapellet.)</head>
                    <HIS:hisLg>
                        <HIS:hisLg>
                            <lb/><l>Slagen er slangen!</l>
                            <lb/><l>Ydmyg og fangen</l>
                            <lb/><l>synderen kommer! &dash;</l>
                            <lb/><l>Slut ham i armene,</l>
                            <lb/><l>høje, forbarmende</l>
                            <lb/><l>jordlivets dommer!</l>
                        </HIS:hisLg>
                        <HIS:hisLg>
                            <lb/><l>Vindende viger han,</l>
                            <lb/><l>styrer mod tronen;</l>
                            <lb/><l>sejrende stiger han &dash; &dash;;</l>
                            <lb/><l>nu har han kronen!</l>
                        </HIS:hisLg>
                    <figure type="bar"/>
                    </HIS:hisLg></HIS:hisLg>
            </HIS:hisDiv>
            <HIS:hisDiv type="song" n="1">
                <HIS:hisLg>
                    <lb/><head type="number"><pb n="4"/>1.</head>
                    <lb/><head type="main">Kor af munke og nonner.</head>
                    <lb/><head type="sub">(Domine coeli etc:)</head>
                    <HIS:hisLg>
                        <lb/><l>Himlens Herre, dine skarer Du sende</l>
                        <lb/><l>til sejr for sandhedens sag!</l>
                        <lb/><l>Er hun falsk, &dash; hendes kød Du til aske brænde,</l>
                        <lb/><l>som en lynild på dommens dag!</l>
                    </HIS:hisLg></HIS:hisLg>
            </HIS:hisDiv>
            <HIS:hisDiv type="song" n="2">
                <HIS:hisLg>
                    <lb/><head type="number">2.</head>
                    <lb/><head type="main">Koret fra kirken.</head>
                    <lb/><head type="sub">(Gloria in excelsis deo.)</head>
                    <HIS:hisLg>
                        <lb/><l>Lovet være Herren i det høje!</l>
                        <lb/><l>Åbenbaret har han sin magt.</l>
                        <lb/><l>Miraklet er fuldbragt. &dash;</l>
                        <lb/><l>Lovet, lovet være Herren i det høje!</l>
                    </HIS:hisLg>
                <figure type="bar"/>
                </HIS:hisLg>
            </HIS:hisDiv>
        </body>
    </text>
